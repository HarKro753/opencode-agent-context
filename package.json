{
  "name": "opencode-agent-context",
  "version": "1.0.0",
  "description": "Persistent, language-specific memory for your OpenCode coding agent. Say it once, your agent remembers it forever.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./detector": {
      "import": "./dist/detector.js",
      "types": "./dist/detector.d.ts"
    },
    "./context-store": {
      "import": "./dist/context-store.js",
      "types": "./dist/context-store.d.ts"
    },
    "./injector": {
      "import": "./dist/injector.js",
      "types": "./dist/injector.d.ts"
    },
    "./rule-reasoner": {
      "import": "./dist/rule-reasoner.js",
      "types": "./dist/rule-reasoner.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && cp src/system-prompt.txt dist/system-prompt.txt",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run test && npm run build",
    "prepack": "npm run build",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "agent-memory",
    "agent-context",
    "context",
    "persistent-memory",
    "coding-agent",
    "ai-agent",
    "memory",
    "rules",
    "conventions",
    "developer-tools"
  ],
  "author": "HarKro753",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HarKro753/opencode-agent-context.git"
  },
  "bugs": {
    "url": "https://github.com/HarKro753/opencode-agent-context/issues"
  },
  "homepage": "https://github.com/HarKro753/opencode-agent-context#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@opencode-ai/plugin": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
